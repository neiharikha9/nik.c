#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main(){
    int English=80 ,Mathematics=75 ,Science=90 , Computer=85 ,History=70;
    scanf("%d %d %d %d %d",&English ,&Mathematics ,&Science ,&Computer ,&History);
    int Total_Marks = English+ Mathematics+ Science+ Computer+ History;
    double Average = (double) Total_Marks/5;
    double Percentage = (double)Total_Marks/5;
    printf("%d %.2lf %.2lf", Total_Marks ,Average ,Percentage);
    return 0;
}
